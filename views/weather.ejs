	<div class="wrapper">
		<div class="sidebar" data-color="blue" data-image="">

			<!--

        Tip 1: you can change the color of the sidebar using: data-color="blue | azure | green | orange | red | purple"
        Tip 2: you can also add an image using data-image tag

    -->

			<div class="sidebar-wrapper">
				<div class="logo text-center">
					<img src="/images/logo.png" height="50%" width="50%">
				</div>

				<ul class="nav">
					<li>
						<a href="/">
							<i class="pe-7s-graph"></i>
							<p>Dashboard</p>
						</a>
					</li>
					<li class="active">
						<a href="/weather">
							<i class="pe-7s-user"></i>
							<p>Weather</p>
						</a>
					</li>
					<li>
						<a href="/music">
							<i class="pe-7s-note2"></i>
							<p>Music</p>
						</a>
					</li>
				</ul>
			</div>
		</div>

		<div class="main-panel">
			<div class="weather-container">
				<div class="weather-panel">
					<h1 class="text-center"><%= location_name %></h1>
					<h2><%= Number(result.DailyForecasts[0].Temperature.Maximum.Value) - Number(result.DailyForecasts[0].Temperature.Minimum.Value) %>Â°C </h2>
					<h3><%= result.DailyForecasts[0].Day.IconPhrase %></h3>
				</div>
			</div>
		</div>
	</div>
</body>

